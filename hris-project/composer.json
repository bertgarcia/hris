{
    "name": "hris-project",
    "description": "A Human Resource Information System built with PHP for the backend and HTML, CSS, and JavaScript for the frontend.",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0",
        "monolog/monolog": "^2.0",
        "illuminate/database": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "backend/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}